{
  "compilerOptions": {
    "rootDir": ".",
    "lib": ["ESNext", "DOM", "ES5"],
    "outDir": "dist",
    "allowJs": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@activeElement": ["./activeElement.ts"]
    },

    // Type Checking / Syntax Rules
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
